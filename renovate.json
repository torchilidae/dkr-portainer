{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "docker-compose": {
    "fileMatch": ["^.*/.*\\.ya?ml$"]
  },
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Automerge updates",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
